<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical" >

    <com.fanwe.p2p.customview.SDSimpleTitleView
        android:id="@+id/act_personal_center_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title" >
    </com.fanwe.p2p.customview.SDSimpleTitleView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 上半部 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_personal_center_top_bar"
                android:background="@drawable/bg_personal_center_top_bar" >

                <LinearLayout
                    android:id="@+id/act_personal_center_lin_username_userlevel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/act_personal_center_txt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lwyxy2014"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/size_text_personal_center_username" />

                    <TextView
                        android:id="@+id/act_personal_center_txt_user_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_personal_center_user_level"
                        android:gravity="center"
                        android:text="初入江湖"
                        android:textColor="@color/text_user_level" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/act_personal_center_lin_username_userlevel"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/act_personal_center_txt_location_province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="福建"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/act_personal_center_txt_location_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="福州"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_personal_center_user_money_bar"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/act_personal_center_txt_money_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_black"
                                android:text="￥168,87"
                                android:textSize="@dimen/size_text_personal_center_money" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:textSize="@dimen/size_text_personal_center_money_label"
                                android:textColor="@color/text_gray"
                                android:text="总资产" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp" >

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/line_seperate_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/act_personal_center_txt_money_can_use"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥278,953"
                                android:textColor="@color/text_orange"
                                android:textSize="@dimen/size_text_personal_center_money" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:textSize="@dimen/size_text_personal_center_money_label"
                                android:textColor="@color/text_gray"
                                android:text="USDT" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp" >

                            <TextView
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/line_seperate_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/act_personal_center_txt_money_freeze"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_black"
                                android:text="￥168,87"
                                android:textSize="@dimen/size_text_personal_center_money" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:gravity="center"
                                android:textSize="@dimen/size_text_personal_center_money_label"
                                android:textColor="@color/text_gray"
                                android:text="奖励X币" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/line_shadow" />
            </RelativeLayout>

            <!-- 下半部 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp" >

                <com.fanwe.p2p.customview.SDSimpleSetItemView
                    android:id="@+id/act_personal_center_item_recharge_withdraw"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_personal_center_single_part" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_personal_center_middle_part"
                    android:orientation="vertical" >

                    <com.fanwe.p2p.customview.SDSimpleSetItemView
                        android:id="@+id/act_personal_center_item_my_invest"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line_seperate" />

                    <com.fanwe.p2p.customview.SDSimpleSetItemView
                        android:id="@+id/act_personal_center_item_bond_transfer"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line_seperate" />

                    <com.fanwe.p2p.customview.SDSimpleSetItemView
                        android:id="@+id/act_personal_center_item_my_interest_bid"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line_seperate" />

                    <com.fanwe.p2p.customview.SDSimpleSetItemView
                        android:id="@+id/act_personal_center_item_bid_recorder"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_personal_center_bottom_part"
                    android:orientation="vertical" >

                    <com.fanwe.p2p.customview.SDSimpleSetItemView
                        android:id="@+id/act_personal_center_item_repayment_loan"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line_seperate" />

                    <com.fanwe.p2p.customview.SDSimpleSetItemView
                        android:id="@+id/act_personal_center_item_published_loan"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>