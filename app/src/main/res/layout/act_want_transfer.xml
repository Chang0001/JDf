<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical" >

    <com.fanwe.p2p.customview.SDSimpleTitleView
        android:id="@+id/act_wantTran_tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title" >
    </com.fanwe.p2p.customview.SDSimpleTitleView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/page_space" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_single_set_item"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/act_wantTran_tv_name"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="上海金汇南路个人房产抵押借款（2/2）"
                        android:textColor="@color/text_black_deep"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                        android:id="@+id/act_wantTran_sd_next_repay_time_format"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_confirm_bid_item" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_seperate_horizontal" />

                    <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                        android:id="@+id/act_wantTran_sd_monthAndrepay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_confirm_bid_item" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_seperate_horizontal" />

                    <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                        android:id="@+id/act_wantTran_sd_left_benjin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_confirm_bid_item" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_seperate_horizontal" />

                    <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                        android:id="@+id/act_wantTran_sd_left_lixi_format"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_confirm_bid_item" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_seperate_horizontal" />

                    <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                        android:id="@+id/act_wantTran_sd_transfer_amount_format"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_confirm_bid_item" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rec_single_set_item"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_confirm_bid_item"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        style="@style/Text_nromal_white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="转让金额"
                        android:textColor="@color/text_black"
                        android:textSize="17sp" />

                    <com.fanwe.p2p.customview.ClearEditText
                        android:id="@+id/act_wantTran_et_trans_amount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:hint="转让金额"
                        android:inputType="numberDecimal"
                        android:textSize="15sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_seperate_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_confirm_bid_item"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        style="@style/Text_nromal_white"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="支付密码"
                        android:textColor="@color/text_black"
                        android:textSize="17sp" />

                    <com.fanwe.p2p.customview.ClearEditText
                        android:id="@+id/act_wantTran_et_pwd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:hint="输入密码"
                        android:inputType="textPassword"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/act_wantTran_btn_buy"
        style="@style/Text_nromal_white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_search_normal"
        android:gravity="center"
        android:text="提交"
        android:textSize="19sp" />

</LinearLayout>