<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all"
    android:orientation="vertical" >

    <com.fanwe.p2p.customview.SDSimpleTitleView
        android:id="@+id/act_project_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title" >
    </com.fanwe.p2p.customview.SDSimpleTitleView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/page_space" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rec_single_set_item"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/act_project_detail_tv_title"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="上海金汇南路个人房产抵押借款（2/2）"
                        android:textColor="@color/text_black_deep"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/act_project_detail_tv_num"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_project_detail_project_id"
                        android:gravity="center"
                        android:text="JK_2014060484335"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                        android:id="@+id/act_project_detail_sdview_borrow_amount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_project_detail_item" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_seperate_horizontal" />

                    <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                        android:id="@+id/act_project_detail_sdview_need_money"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_project_detail_item" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_seperate_horizontal" />

                    <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                        android:id="@+id/act_project_detail_sdview_min_loan_money"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_project_detail_item" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rec_single_set_item"
                android:orientation="vertical" >

                <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                    android:id="@+id/act_project_detail_sdview_rate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_project_detail_item" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_seperate_horizontal" />

                <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                    android:id="@+id/act_project_detail_sdview_repay_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_project_detail_item" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_seperate_horizontal" />

                <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                    android:id="@+id/act_project_detail_sdview_repay_method"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_project_detail_item" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_seperate_horizontal" />

                <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                    android:id="@+id/act_project_detail_sdview_risk_rank"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_project_detail_item" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_seperate_horizontal" />

                <com.fanwe.p2p.customview.SDSimpleProjectDetailItemView
                    android:id="@+id/act_project_detail_sdview_remain_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_project_detail_item" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_project_detail_bottom_btn_bar"
        android:gravity="center" >

        <Button
            android:id="@+id/act_project_detail_btn_look_detail"
            style="@style/Text_nromal_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/act_project_detail_left_btn"
            android:gravity="center"
            android:text="查看详情" />

        <Button
            android:id="@+id/act_project_detail_btn_invest"
            style="@style/Text_nromal_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/act_project_detail_right_btn"
            android:gravity="center"
            android:text="我要投资" />
    </LinearLayout>

</LinearLayout>